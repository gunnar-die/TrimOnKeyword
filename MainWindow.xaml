<Window x:Class="TrimOnKeyword.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="Trim On Keyword"
        Height="600" Width="980"
        MinWidth="880" MinHeight="520"
        Background="{DynamicResource Bg}"
        Foreground="{DynamicResource Fg}"
        WindowStyle="None"
        ResizeMode="CanResize"
        AllowsTransparency="False">

    <!-- 100% remove white system caption / non-client area -->
    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome
            CaptionHeight="0"
            CornerRadius="0"
            GlassFrameThickness="0"
            NonClientFrameEdges="None"
            ResizeBorderThickness="6"
            UseAeroCaptionButtons="False" />
    </shell:WindowChrome.WindowChrome>

    <!-- === Dark Theme Resources (clean + square) === -->
    <Window.Resources>
        <!-- Palette -->
        <SolidColorBrush x:Key="Bg"             Color="#1E1F22"/>
        <SolidColorBrush x:Key="Surface"        Color="#26282C"/>
        <SolidColorBrush x:Key="SurfaceAlt"     Color="#2D3035"/>
        <SolidColorBrush x:Key="Border"         Color="#3A3F45"/>
        <SolidColorBrush x:Key="Fg"             Color="#E6E6E6"/>
        <SolidColorBrush x:Key="FgMuted"        Color="#B0B6BF"/>
        <SolidColorBrush x:Key="AccentGreen"    Color="#2ECC71"/>
        <SolidColorBrush x:Key="AccentGreenAlt" Color="#27AE60"/>
        <SolidColorBrush x:Key="Primary"        Color="#3B82F6"/>

        <!-- Section containers -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="CornerRadius" Value="0"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Background" Value="{StaticResource Surface}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Buttons (flat + square) -->
        <Style x:Key="BaseButton" TargetType="Button">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="MinWidth"  Value="72"/>
            <Setter Property="Foreground" Value="{StaticResource Fg}"/>
            <Setter Property="Background" Value="{StaticResource SurfaceAlt}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#34383E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#3A3F45"/>
                                <Setter Property="Foreground" Value="#80868F"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Positive/Go button -->
        <Style x:Key="GoButton" TargetType="Button" BasedOn="{StaticResource BaseButton}">
            <!-- disabled -->
            <Setter Property="Background" Value="#3D4F3D"/>
            <Setter Property="BorderBrush" Value="#355A3E"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentGreen}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource AccentGreenAlt}"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Inputs -->
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource Fg}"/>
            <Setter Property="Background" Value="{StaticResource SurfaceAlt}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource Fg}"/>
        </Style>

        <!-- DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource Surface}"/>
            <Setter Property="Foreground" Value="{StaticResource Fg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Border}"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource Border}"/>
            <Setter Property="VerticalGridLinesBrush" Value="{StaticResource Border}"/>
            <Setter Property="RowBackground" Value="#24272B"/>
            <Setter Property="AlternatingRowBackground" Value="#212428"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#2C2F35"/>
            <Setter Property="Foreground" Value="{StaticResource Fg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Border}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#3B4960"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ProgressBar">
            <Setter Property="Foreground" Value="{StaticResource Primary}"/>
            <Setter Property="Background" Value="{StaticResource SurfaceAlt}"/>
            <Setter Property="Height" Value="12"/>
        </Style>
    </Window.Resources>

    <!-- === Root Layout: custom title bar + content === -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <!-- title bar -->
            <RowDefinition Height="*"/>
            <!-- content -->
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Grid Grid.Row="0" Background="{StaticResource Surface}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Drag area -->
            <Border Grid.Column="0"
                    Background="{StaticResource Surface}"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <TextBlock Text="Trim On Keyword"
                           VerticalAlignment="Center"
                           Margin="12,0,0,0"
                           Foreground="{StaticResource Fg}"/>
            </Border>

            <!-- Window buttons -->
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Style="{StaticResource BaseButton}" Width="40" Content="_" Click="BtnMin_Click"/>
                <Button Style="{StaticResource BaseButton}" Width="40" Content="□" Click="BtnMax_Click"/>
                <Button Style="{StaticResource BaseButton}" Width="40" Content="X"
                        Background="#C0392B" BorderBrush="#922B21" Click="BtnClose_Click"/>
            </StackPanel>
        </Grid>

        <!-- Main content -->
        <Grid Grid.Row="1" Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Row 0: Keyword + Scan -->
            <Border Grid.Row="0" Style="{StaticResource Card}">
                <DockPanel>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                        <TextBlock VerticalAlignment="Center" Text="Keyword:" Foreground="{StaticResource FgMuted}"/>
                        <TextBox x:Name="TxtKeyword" Width="300" Margin="8,0,0,0"/>
                        <Button x:Name="BtnScan" Click="BtnScan_Click"
                                Style="{StaticResource BaseButton}" Margin="8,0,0,0" Content="Scan"/>
                    </StackPanel>
                    <CheckBox x:Name="ChkCase" Content="Case sensitive" HorizontalAlignment="Right"/>
                </DockPanel>
            </Border>

            <!-- Row 1: Folder + selection + Go! -->
            <Border Grid.Row="1" Style="{StaticResource Card}">
                <DockPanel>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                        <Button x:Name="BtnPick" Click="BtnPick_Click" Style="{StaticResource BaseButton}" Content="Pick Folder"/>
                        <TextBlock VerticalAlignment="Center" Text="  Folder:" Margin="8,0,0,0" Foreground="{StaticResource FgMuted}"/>
                        <TextBlock x:Name="LblFolder" VerticalAlignment="Center" Text="(none)"
                                   TextTrimming="CharacterEllipsis" Width="520" Margin="8,0,0,0"/>
                        <Button x:Name="BtnSelectAll" Click="BtnSelectAll_Click" Style="{StaticResource BaseButton}"
                                Margin="8,0,0,0" Content="Select All"/>
                        <Button x:Name="BtnDeselectAll" Click="BtnDeselectAll_Click"
                                Style="{StaticResource BaseButton}" Margin="8,0,0,0" Content="Deselect All"/>
                    </StackPanel>

                    <Button x:Name="BtnGo" Click="BtnGo_Click" Style="{StaticResource GoButton}"
                            Margin="12,0,0,0" Content="Go!" HorizontalAlignment="Right"/>
                </DockPanel>
            </Border>

            <!-- Row 2: Grid -->
            <Border Grid.Row="2" Style="{StaticResource Card}" Padding="0">
                <DataGrid x:Name="GridPreview"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="False"
                          ItemsSource="{Binding PreviewItems}">
                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn Binding="{Binding IsSelected, Mode=TwoWay}" Header="✔" Width="40"/>
                        <DataGridTextColumn Header="Current Name" Width="*" MinWidth="280" Binding="{Binding CurrentName}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                    <Setter Property="ToolTip" Value="{Binding CurrentPath}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="New Name" Width="*" MinWidth="280" Binding="{Binding NewName}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                    <Setter Property="ToolTip" Value="{Binding NewPath}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- Row 3: Progress bar -->
            <ProgressBar x:Name="Prog" Grid.Row="3" Minimum="0" Maximum="100"/>
        </Grid>
    </Grid>
</Window>
